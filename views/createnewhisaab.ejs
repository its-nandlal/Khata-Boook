<%- include ('partials/header') %>

<div class="w-full h-screen bg-zinc-300 px-16 max-[768px]:px-8 max-[425px]:px-4">
    <nav class="w-full pt-8 pb-16 flex items-center justify-between max-[768px]:pb-10 max-[425px]:pt-8 ">
        <div>
          <a class="text-2xl font-semibold max-[768px]:text-xl" href="">KhataBook</a>
        </div>
        <div class="flex gap-5">
          <a
          class="px-4 py-2 bg-blue-600 text-white text-base capitalize font-semibold rounded-md
          hover:bg-blue-700 ease-in-out duration-300 max-[768px]:text-sm"
          href="/">
          <i class="ri-arrow-left-line"></i> back to home
          </a>
        </div>
    </nav>

    <div class="w-full flex flex-col gap-5 ">
        <h1 class="text-2xl capitalize font-semibold max-[768px]:text-xl">Create New Hisaab</h1>

        <form 
        action="/createnewhisaab"
        method="post"
        class="w-1/2 flex flex-col gap-4 min-w-[20%] max-[768px]:w-[85%] max-[425px]:w-full">
            <input 
            name="title"  
            type="text"
            placeholder="Title"
            class="w-full bg-zinc-200 px-4 py-2 rounded-md outline-none border-[3px] border-zinc-100/25">

            <textarea 
            name="desc" 
            id=""
            placeholder="Expense Description"
            class="w-full h-[45vh] bg-zinc-200 px-4 py-2 rounded-md outline-none border-[3px] border-zinc-100/25"></textarea>

            <input 
            type="submit" 
            value="Create new  Hisaab"
            class="w-fit px-4 py-2 bg-blue-600 text-white font-semibold rounded-md cursor-pointer
            hover:bg-blue-700 ease-in-out duration-300">
        </form>
    </div>
</div>

